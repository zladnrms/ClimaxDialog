<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="defy.tech.testdialog.data.DialogItem" />
    </data>

    <com.tistory.zladnrms.NestedRoundableLayout
        android:id="@+id/layout_dialog"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:backgroundColor="@color/colorWhitePrimary"
        app:cornerLeftBottom="15dp"
        app:cornerLeftTop="15dp"
        app:cornerRightBottom="15dp"
        app:cornerRightTop="15dp">

        <LinearLayout
            android:id="@+id/layout_title_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBluePrimary"
            android:padding="8dp"
            android:visibility="gone"
            android:minHeight="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhitePrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:gravity="center"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@id/layout_left_action"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_title_bar">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlackPrimary"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_center_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_round"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:text="확인"
            android:textColor="@color/colorWhitePrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/layout_left_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayPrimary"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="32dp"
            android:paddingLeft="6dp"
            android:paddingTop="7dp"
            android:paddingRight="6dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.30">

            <TextView
                android:id="@+id/tv_left_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhitePrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_right_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBluePrimary"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="32dp"
            android:paddingLeft="6dp"
            android:paddingTop="7dp"
            android:paddingRight="6dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.70">

            <TextView
                android:id="@+id/tv_right_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhitePrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom_only_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBluePrimary"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="32dp"
            android:paddingLeft="6dp"
            android:paddingTop="7dp"
            android:paddingRight="6dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_bottom_only_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhitePrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.tistory.zladnrms.NestedRoundableLayout>

</layout>