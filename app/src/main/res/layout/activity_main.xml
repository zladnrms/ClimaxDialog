<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button android:id="@+id/button_1_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="bottomLeftAndRight"
            android:textColor="@color/colorWhitePrimary"
            android:background="@color/colorBluePrimary"
            android:textSize="15sp"/>

        <Button android:id="@+id/button_1_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="centerLeftAndRight"
            android:textColor="@color/colorWhitePrimary"
            android:background="@color/colorBluePrimary"
            android:textSize="15sp"
            android:layout_marginStart="30dp"/>

        <Button android:id="@+id/button_1_3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="center"
            android:textColor="@color/colorWhitePrimary"
            android:background="@color/colorBluePrimary"
            android:textSize="15sp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

</LinearLayout>